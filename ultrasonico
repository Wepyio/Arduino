//ejemplo de uso de ultrasonico sin librerias

int constante = 58; //pasar de microsegundos a centimetros
int echo = 0; //terminal para activar el envio de sonido
int trigger = 1; //terminal para medir el tiempo de envio
int tiempo, distancia; //variables para segundos y centimetros

void setup(){//configuracion de pines
  pinMode(echo, OUTPUT);
  pinMode(trigger, INPUT);
}

void loop(){
  digitalWrite(echo, LOW);//iniciar en 0 para limpiar salida
  delayMicroseconds(2);
  digitalWrite(echo, HIGH);//enviar se√±al para medir
  delayMicroseconds(10);
  digitalWrite(echo, LOW);
  tiempo = pulseIn(trigger,HIGH);  //medir el tiempo de retorno en microsegundos
  distancia = tiempo/contante;//para de microsegundos a centimetros
}
